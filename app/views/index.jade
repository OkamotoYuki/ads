extends layout
block append content
    script#case_tmpl(type="text/x-jquery-tmpl")
        li.media
            img.media-object.pull-left(data-src="holder.js/64x64",alt="64x64",style="width: 64px; height: 64px;",src="data:image/png;base64,")
            .media-body
                h4
                    a(href='#') ${name}
                    a.btn.btn-danger.btn-mini.pull-right.DeleteCaseButton
                        i.icon-trash　&nbsp;
                        |Delete
                    span.pull-right
                        i.icon-sitemap
                        | ${size}&nbsp;
                p ${description}
                small
                    a(href='#') ${lastUpdateUser}
                    |  updated ${lastUpdateDate}
    script#project_tmpl(type="text/x-jquery-tmpl")
        article(id="project${projectId}")
            h3 #${projectId} ${projectName} &nbsp;
                a.btn.btn-mini
                    i.icon-edit &nbsp;
                a.btn.btn-success.btn-small.pull-right.NewCaseButton
                    i.icon-plus　&nbsp;
                    |New case
            ul.inline
                li
                    i.icon-user　&nbsp;
                    |${users && users.length > 0 ? users.length : "Public"}
                |{{if users}}
                |{{each users}}
                li
                    a(href='#') ${this.name}
                |{{/each}}
                |{{/if}}
            ul.media-list
                |{{tmpl(cases) "#case_tmpl"}}
            hr
block bar
    a(href="#{basepath}/")
        img#menu-button(src="#{basepath}/images/ait.png") Menu
    .menu
        ul#drop-menu
            if userName
                li#monitors-menu
                    a(href='#') Monitors
                li#settings-menu
                    a(href='#') Settings
                block sign
            else
                block sign
block content
    #dcase-manager.container-fluid(style="display: none;")
        .row
            #newDCase.span6.offset3(style='display: none;')
                h2= lang.new_DCase
                form.form-horizontal
                    .control-group#newdcase-name
                        label.control-label(for="inputDCaseName")= lang.DCase_name
                        .controls
                            input#inputDCaseName(type="text", id="inputDCaseName")
                    .control-group#newdcase-desc
                        label.control-label(for="inputDesc")= lang.topgoal
                        .controls
                            textarea#inputDesc(rows=5)
                    .control-group
                        .controls
                            button.btn#dcase-create(type="button")= lang.create
            #selectDCase.span6.offset2
                h2 Projects&nbsp;
                    a.btn.btn-success.pull-right
                        i.icon-plus　&nbsp;
                        |New project
                hr
                #ProjectList
        .dropdown#edit-menulist(style="display: none;")
            a.dropdown-toggle(data-toggle="dropdown", href="#")
                i.icon-list
            ul.dropdown-menu
                li
                    a#ml-cut(href="#")= lang.cut
                li
                    a#ml-copy(href="#")= lang.copy
                li
                    a#ml-paste(href="#")= lang.paste
                li
                    a#ml-delete(href="#")= lang.delete
                li.divider
                li
                    a#ml-openall(href="#")= lang.openall
                li
                    a#ml-closeall(href="#")= lang.closeall
                li.divider
                li.dropdown-submenu
                    a(tabindex="-1", href="#")= lang.export
                    ul.dropdown-menu
                        li
                            a#ml-export-json(href="#") JSON
                        li
                            a#ml-export-png(href="#") PNG
                        li
                            a#ml-export-pdf(href="#") PDF
                        li
                            a#ml-export-dscript(href="#") D-Script
        table#edit-newnode(style="display: none;")
                tr
                    td(width="80")
                        ul.nav.nav-list(style="min-height: 100px;")
                    td(width="200")
                        textarea(style="margin: 0px; padding: 0px; width: 100%; height: 100%;")

