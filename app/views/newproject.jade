extends layout
block bar
    a(href="#{basepath}/")
        img#menu-button(src="#{basepath}/images/ait.png") Menu
    .menu
        ul#drop-menu
            if userName
                li#monitors-menu
                    a(href='#') Monitors
                li#settings-menu
                    a(href='#') Settings
                block sign
            else
                block sign
block content
    #dcase-manager.container-fluid
        .row
            #newProject.span6.offset3
                h2= lang.new_Project
                form.form-horizontal
                    .control-group#newproject-name
                        label.control-label(for="inputProjectName")= lang.Project_name
                        .controls
                            input#inputProjectName(type="text", id="inputProjectName")
                    .control-group#newproject-desc
                        label.control-label(for="inputDesc")= lang.topgoal
                        .controls
                            textarea#inputDesc(rows=5)
                    .control-group
                        .controls
                            button.btn#project-create(type="button")= lang.create
