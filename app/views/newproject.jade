extends base
block script
    +js('/javascripts/route/index.js')
block bar
    include logo
    .menu
        ul#drop-menu
            if userName
                li#monitors-menu
                    a(href='#') Monitors
                li#settings-menu
                    a(href='#') Settings
                include signout
            else
                include signin
block append content
    +template("member_tmpl")
        form.form-inline.memberForm
            input.input-lg.userName(type="text", placeholder="username", value="${name}")
            |&nbsp;
            input.input-medium.role(type="text", placeholder="role", value="${role}")
            |&nbsp;
            button.btn.btn-default.btn.btn-default-default.btn.btn-default-danger.DeleteMemberButton
                span.glyphicon.glyphicon-minus
block content
    .container
        .row
            .col-md-6.col-md-offset-3
                if projectId
                    h2= lang.edit_Project
                else
                    h2= lang.new_Project
                form
                    label(for="inputProjectName")= lang.Project_name
                    input#inputProjectName(type="text")
                    //label(for="inputLanguage")= lang.locale
                    //select#inputLanguage
                        option(value="en") English
                        option(value="ja") Japanese
                    label.checkbox= lang.public
                        input#inputIsPublic(type="checkbox")
                #MemberList
                    h3= lang.member
                    form.form-inline
                        button.btn.btn-default.btn.btn-default-success#AddMemberButton
                            span.glyphicon.glyphicon-plus
                form
                    if projectId
                        button.btn.btn-default.btn.btn-default-primary#project-create(type="button")= lang.update
                        | &nbsp;
                        button.btn.btn-default.btn.btn-default-danger#project-delete(type="button")=  lang.delete
                    else
                        button.btn.btn-default.btn.btn-default-primary#project-create(type="button")= lang.create
